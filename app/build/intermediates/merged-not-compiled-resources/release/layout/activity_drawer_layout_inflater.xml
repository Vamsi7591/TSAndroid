<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <ImageView
            android:id="@+id/slider_user_iv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/menu_user" />

        <TextView
            android:id="@+id/slider_header_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_0"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Welcome "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_font_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slider_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_0"
                android:text="Logged In as Admin"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_font_medium"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_3"
            android:background="@color/colorAccent" />

    </LinearLayout>

    <ListView
        android:id="@+id/slider_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_0"
        android:divider="@color/darker_gray_30"
        android:dividerHeight="1dp"
        android:scrollbars="none" />

</LinearLayout>