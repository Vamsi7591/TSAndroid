<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Lite" parent="android:Theme.Material.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TimeSheet.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorPrimaryDark</item>

        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorAccent</item>

    </style>

    <style name="TimeSheet.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.TextInputLayout.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <item name="android:textColorHighlight">@color/colorControlActivated</item>
    </style>

    <style name="AppTheme.Input.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingBottom">@dimen/layout_action_padding_10</item>
        <item name="android:paddingTop">@dimen/layout_action_padding_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <item name="android:textColorHighlight">@color/colorControlActivated</item>
        <item name="android:gravity">left</item>
    </style>


</resources>