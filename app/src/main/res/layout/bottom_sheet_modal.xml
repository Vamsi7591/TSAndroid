<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <com.android.timesheet.shared.widget.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_border"
        android:drawableLeft="@drawable/close_icon"
        android:drawableStart="@drawable/close_icon"
        android:gravity="center"
        android:paddingEnd="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="45dp"
        android:paddingStart="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        app:font="@string/roboto_regular" />

    <com.android.timesheet.shared.widget.calender.CalendarView
        android:id="@+id/calenderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent" />

</RelativeLayout>