<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_marginStart="@dimen/margin_30">

                        <com.android.timesheet.shared.widget.CustomFontTextView
                            android:id="@+id/toolbarTitleTv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_0"
                            android:layout_marginRight="@dimen/margin_0"
                            android:clickable="true"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/tv_font_size_20"
                            android:visibility="visible"
                            app:font="@string/roboto_thin" />

                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/mActionsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            tools:ignore="UnknownIdInLayout">

            <Button
                android:id="@+id/assignProject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_thumb_up_black"
                android:text="Assign"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_font_size_20"
                android:textStyle="bold" />

            <Button
                android:id="@+id/removeProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_thumb_down_black"
                android:text="Remove"
                android:textColor="@color/colorWhite115"
                android:textSize="@dimen/tv_font_size_16"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/mEmpLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mActionsLL"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Employee Names"
                android:textColor="#000"
                android:textSize="@dimen/tv_font_size_18" />

            <Spinner
                android:id="@+id/employeeName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="end"
                android:popupElevation="@dimen/padding_5"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:theme="@style/AppTheme.Spinner"
                tools:ignore="RtlCompat"
                tools:targetApi="lollipop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mProjectLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mEmpLL"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Project Name"
                android:textColor="#000"
                android:textSize="@dimen/tv_font_size_18" />

            <Spinner
                android:id="@+id/projectName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="end"
                android:popupElevation="@dimen/padding_5"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:theme="@style/AppTheme.Spinner"
                tools:ignore="RtlCompat"
                tools:targetApi="lollipop" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutBottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mProjectLL"
            android:layout_margin="@dimen/margin_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/assignProjectToEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0ab345"
                android:drawableBottom="@drawable/ic_thumb_up_black"
                android:gravity="center"
                android:text="Assign"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:visibility="gone" />

            <Button
                android:id="@+id/removeProjectFromEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#d11336"
                android:drawableBottom="@drawable/ic_thumb_down_black"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
