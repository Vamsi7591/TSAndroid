<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Input Edit text-->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TimeSheet.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Input Edit text-->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

        <!-- For Chat-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorAccent</item>

    </style>


    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Menu" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">@dimen/layout_action_padding_10</item>
        <item name="android:paddingBottom">@dimen/layout_action_padding_10</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:paddingTop">@dimen/layout_action_padding_10</item>
        <item name="android:paddingLeft">@dimen/layout_action_padding_5</item>
        <item name="android:paddingBottom">@dimen/layout_action_padding_10</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/colorWhite70</item>
    </style>


    <!--Vamsi-->
    <style name="AppTheme.Text.TextView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.TextView.Header" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_font_size_20</item>
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.TextView.Large" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_font_size_18</item>
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.TextView.Small" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_font_small</item>
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.TextView.Medium" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_font_xlarge</item>
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.TextView.Menu" parent="AppTheme">
        <item name="android:paddingTop">@dimen/layout_action_padding_10</item>
        <item name="android:paddingBottom">@dimen/layout_action_padding_10</item>
        <item name="android:gravity">left|center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="android:textSize">@dimen/tv_font_large</item>
    </style>


    <!-- Views Style-->
    <style name="AppTheme.AppName" parent="AppTheme.Text.TextView.Header">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/app_name_font_size</item>
        <item name="android:layout_marginTop">@dimen/app_name_m_top</item>
    </style>

    <style name="AppTheme.AppSubName" parent="AppTheme.Text.TextView.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionMenuTextColor">@drawable/tv_action_button_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AppTheme.Action.TextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/tv_action_button_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AppTheme.Input.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingBottom">@dimen/layout_action_padding_10</item>
        <item name="android:paddingTop">@dimen/layout_action_padding_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <item name="android:textColorHighlight">@color/colorControlActivated</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.TextInputLayout.ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError2</item>
        <item name="android:textSize">@dimen/tv_font_size_14</item>
        <item name="android:layout_marginLeft">@dimen/layout_action_padding_10</item>
    </style>

    <style name="AppTheme.TextInputLayout.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <item name="android:textColorHighlight">@color/colorControlActivated</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:selectable">true</item>
        <item name="android:selectableItemBackground">@color/colorPrimary</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:selectable">true</item>
        <item name="android:selectableItemBackground">@color/colorPrimary</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>
</resources>
